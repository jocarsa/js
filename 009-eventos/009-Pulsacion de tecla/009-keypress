<!doctype html>
<html lang="es">
    <head>
        <title>Javascript</title>
        <meta charset="utf-8">
    </head>
    <body>
        <script>
            document.onkeydown = function(e){
                console.log("Has pulsado una tecla")
                console.log("Y la tecla es: "+e.which)
                console.log("Y corresponde a: "+String.fromCharCode(e.which))   
            }
            document.onkeyup = function(e){
                console.log("Has DESpulsado una tecla")
                console.log("Y la tecla es: "+e.which)
                console.log("Y corresponde a: "+String.fromCharCode(e.which))   
            }
        </script>
    </body>